            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "ID ticket tidak ditemukan."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Ticket"],
        "summary": "Delete Ticket",
        "description": "Remove existing ticket by id.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
